---
import CheckoutLayout from "../../../layouts/CheckoutLayout.astro";
import Button from "../../../components/Button.astro";
---

<CheckoutLayout title="Review Plan" planName="Small Business" planSlug="small-business" planPrice={29} currentStep={1}>
  <h1 class="text-2xl font-bold text-gray-900">Review Your Plan</h1>
  <p class="mt-2 text-gray-500">You've selected the Small Business plan. Here's what's included:</p>

  <div class="mt-8 space-y-4">
    <div class="rounded-lg border border-gray-200 p-4">
      <h3 class="font-semibold text-gray-900">Small Business Plan â€” $29/month</h3>
      <ul class="mt-4 space-y-2">
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Unlimited projects
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Advanced boards, timelines & calendars
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          10 GB file storage
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Priority email & chat support
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Team automations
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Guest access
        </li>
      </ul>
    </div>
  </div>

  <div class="mt-8 flex gap-4">
    <Button href="/pricing" variant="secondary">Back to Pricing</Button>
    <Button
      href="/checkout/small-business/account"
      variant="primary"
      data-umami-event="checkout-confirm-plan"
      data-umami-event-plan="small-business"
    >
      Continue to Account
    </Button>
  </div>
</CheckoutLayout>

<script>
  window.umami?.track("checkout-view-plan", { plan: "small-business" });
</script>
