---
import CheckoutLayout from "../../../layouts/CheckoutLayout.astro";
import Button from "../../../components/Button.astro";
---

<CheckoutLayout title="Review Plan" planName="Individual" planSlug="individual" planPrice={9} currentStep={1}>
  <h1 class="text-2xl font-bold text-gray-900">Review Your Plan</h1>
  <p class="mt-2 text-gray-500">You've selected the Individual plan. Here's what's included:</p>

  <div class="mt-8 space-y-4">
    <div class="rounded-lg border border-gray-200 p-4">
      <h3 class="font-semibold text-gray-900">Individual Plan â€” $9/month</h3>
      <ul class="mt-4 space-y-2">
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Up to 5 projects
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Basic boards & lists
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          1 GB file storage
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Email support
        </li>
        <li class="flex items-center gap-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
          Mobile app access
        </li>
      </ul>
    </div>
  </div>

  <div class="mt-8 flex gap-4">
    <Button href="/pricing" variant="secondary">Back to Pricing</Button>
    <Button
      href="/checkout/individual/account"
      variant="primary"
      data-umami-event="checkout-confirm-plan"
      data-umami-event-plan="individual"
    >
      Continue to Account
    </Button>
  </div>
</CheckoutLayout>

<script>
  window.umami?.track("checkout-view-plan", { plan: "individual" });
</script>
