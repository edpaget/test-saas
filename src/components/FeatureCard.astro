---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
  <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-brand-50 text-2xl">
    {icon}
  </div>
  <h3 class="mt-4 text-lg font-semibold text-gray-900">{title}</h3>
  <p class="mt-2 text-sm leading-relaxed text-gray-500">{description}</p>
</div>
